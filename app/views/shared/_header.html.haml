//%h1 Header
%header.navbar.navbar-inverse
  %nav
    %ul.nav.navbar-nav.pull-right
      %li.locale
        - if locale == :en
          = link_to image_tag("ru.svg", alt: "",  style: "width: 20px; height: 13px", title: "Русский" ), locale: :ru
        - else
          = link_to image_tag("uk.svg", alt: "",  style: "width: 20px; height: 13px", title: "English"), locale: :en
      %li
        %b= I18n.locale
      %li= link_to t('header.main'), root_path
      %li= link_to t('header.help'), main_help_path
      - if signed_in?
        %li= link_to t('header.profile'), current_user
        %li.divider
        %li= link_to t('header.sign_out'), sign_out_path, method: "delete"
        %li.logged
          #{current_user.email}
        = gravatar_for current_user
      - else
        %li= link_to t('header.sign_in'), sign_in_path

