//%h1 Header
%nav
  %ul.nav.navbar-nav.pull-right
    %li= link_to t('.main'), main_index_path
    %li= link_to t('.home'), main_index_path
    %li= link_to t('.help'), main_help_path
    - if signed_in?
      %li= link_to "Users", '#'
      %li.logged
        #{current_user.email}
      = gravatar_for current_user
      %li
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %p
            = t('.person')
            %b.caret
        %ul.dropdown-menu
          %li= link_to t('.profile'), current_user
          %li= link_to t('.settings'), '#'
          %li.divider
          %li
            = link_to t('.sign_out'), sign_out_path, method: "delete"
    - else
      %li= link_to t('.sign_in'), sign_in_path

